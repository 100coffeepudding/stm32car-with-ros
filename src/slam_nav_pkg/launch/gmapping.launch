<launch>
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="robot_base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>

    <param name="particles" value="30"/>
    <param name="delta" value="0.02"/>
    <param name="linearUpdate" value="0.05"/>      <!-- 移动 2cm 更新地图 -->
    <param name="angularUpdate" value="0.1"/>     <!-- 转角 0.05 rad (~2.8°) 更新地图 -->
    <param name="temporalUpdate" value="1.0"/>     <!-- 最多每秒更新一次地图 -->

    <param name="sigma" value="0.05"/>            <!-- 激光匹配噪声 -->
    <param name="lsigma" value="0.075"/>
    <param name="kernelSize" value="1"/>
    <param name="maxUrange" value="6.0"/>          <!-- 激光最大有效距离 -->
    <param name="maxRange" value="8.0"/>

    <param name="xmin" value="-10.0"/>
    <param name="ymin" value="-10.0"/>
    <param name="xmax" value="10.0"/>
    <param name="ymax" value="10.0"/>
    <param name="maxMapSizeX" value="1000"/> 
    <param name="maxMapSizeY" value="1000"/>

    <remap from="scan" to="/scan"/>
    <remap from="odom" to="/odom"/>
  </node>
</launch>
